<div class="container">
<h1>Burgers!</h1>

<h2>Here are some burgers:</h2>
<div class="row">
  <div class="col-6">
<ul>
  {{#each burgers}}
  <li>
    <p>
      {{this.id}}. {{this.burger_name}}
      <button data-burgersid="{{this.id}}" class="devoured">Devour it!</button>
    </p>
  </li>
  {{/each}}
</ul>
</div>
<div class="col-6">
  <h3>Devoured! Yum!</h3>

<ul>
  {{#each burgers}}
  {{#if Devoured}}
  {{!-- {{> cats/cat-block sleep=false}} --}}
  {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div class="row">
  <div class="col-6">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devoured?</label><br>
    <input type="radio" name="devoured" value="1"> Devoured<br>
    <input type="radio" name="notDevoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>
</div>
